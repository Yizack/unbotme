  "license": "MIT",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.6.2",
    "@twurple/auth": "^7.1.0",
    "@twurple/auth-tmi": "^7.1.0",
    "@types/node": "^22.2.0",
    "@types/ssh2": "^1.15.0",
    "@typescript-eslint/parser": "^8.0.1",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "nodemon": "^3.1.4",
    "ofetch": "^1.3.4",
    "socket.io": "^4.7.5",
    "ssh2": "^1.15.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.17.0",
